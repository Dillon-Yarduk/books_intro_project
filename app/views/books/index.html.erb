<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Publisher</th>
      <th>Author</th>
      <th>Description</th>
      <th>Page count</th>
      <th>Published date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book  %></td>
        <td><%= link_to book.publisher.name, book.publisher %></td>
        <td><%= link_to book.author.name, book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.page_count %></td>
        <td><%= book.published_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
